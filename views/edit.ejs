<!DOCTYPE html>
<head>
    <title>Todo App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-indigo-200">
    <div class="container rounded-xl w-full max-w-2xl mx-auto bg-white my-8">
        <div class="text-3xl text-center font-bold mb-3 uppercase py-2">Edit List Item</div>
        <tbody>
            <ul class= "list-none todo-list bg-indigo-500">
                <td class="text-center px-1 py-2 text-orange-800">
                <% todoTasks.forEach(details=> { %>
                    <% if (details._id==idTask) { %>
                        <li class="todo-list-item flex flex-row px-1 py-2 text-white">
                            <form action="/edit/<%= details._id %>" method="POST" class="flex flex-col todo-header">
                                <input type="text" value="<%= details.title %>" name="title" class="text-xl mb-8 text-black-800 py-2 px-5 bg-indigo-100">
                                <textarea rows="6" cols="45" name="content" class="text-xl text-black-800 py-2 px-5 bg-indigo-100"><%= details.content %></textarea>
                                <div>
                                    <button type="submit" class="my-8 bg-indigo-500	 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full max-w-2xl">Confirm</button>
                                </div>                                
                                <a href="/" class="my-2 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full max-w-2xl">Cancel</a>
                            </form>
                        </li>
                        <% } else { %>
                            <li class="todo-list-item flex flex-row px-1 py-2 text-white">
                                <div class="text-center px-1 py-2 text-white">
                                    <%= details.title %>
                                </div>
                                <div class="px-1 py-2 text-white">
                                    <%= details.content %>
                                </div>
                                <div class="text-center  px-1 py-2 text-white flex gap-3 justify-start">
                                    <a href="/edit/<%= details._id %>" class="edit h-6 w-6">
                                        <span class="fas fa-edit items-baseline"></span>
                                    </a>
                                    <a href="/edit/remove/<%= details._id %>" class="remove h-6 w-6">
                                        <span class="fas fa-times items-baseline"></span>
                                    </a>
                                </div>
                            </li>
                            <% } %>
                                <% }) %>
            </ul>
        </tbody>
    </div>
</body>